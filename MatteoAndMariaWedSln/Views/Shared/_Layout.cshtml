@using WeddingServices.Utilities
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Matteo & Maria - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <link href="http://fonts.googleapis.com/css?family=Dancing+Script:700" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=EB+Garamond" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Raleway:900" rel="stylesheet" type="text/css">
    <meta name="description" content="Il nostro matrimono! Maria & Matteo">
    <meta name="keywords" content="Matteo, Maria, Garzulino, Cecchini, Matrimonio, Love, Amore, Rimini, Cattolica, 24 agosto 2017" />
    <meta http-equiv="content-language" content="it">
    <meta http-equiv="content-type" content="text/html; charset=ISO-8859-1">
    <meta name="revisit-after" content="3 Days">
</head>
<body data-spy="scroll" data-target=".navbar-default">
    @{
        DateTime weddingDate = new DateTime(2017, 8, 24);
    }
    <div class="navbar navbar-default navbar-inverse navbar-fixed-top menuBar">
        <div class="container">
            <div class="navbar-header menuHeader">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Maria & Matteo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand menuHome" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav menuHeaderCollapse">
                    <li><a href="/Home/Index#Cerimonia">Ci sposiamo!</a></li>
                    <li><a href="/Home/Index#Ricevimento">Il ricevimento</a></li>
                    <li><a href="/Home/Index#Viaggio">La luna di miele</a></li>
                    <li><a href="/Home/Index#RSVP">Rsvp</a></li>
                    <li><a href="/Home/Index#Guestbook">Guestbook</a></li>
                    @*<li><a href="/Home/Index#Riviera">La Riviera</a></li>*@
                </ul>
            </div>
        </div>
    </div>


    @RenderBody()
    @*</div>*@
    <footer>
        <div class="navbar navbar-fixed-bottom footerBar">

            <div class="container">
                <div class="container-fluid">
                    <div class="row">
                        <div class="text-center">
                            <span>Just remember to fall in love!</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="text-center">
                            @*<i class="fa fa-heart-o" aria-hidden="true"></i>*@
                            <p>Matteo ❤️ Maria</p>
                            @*<p>@weddingDate.ToItalianWithDayNameString()</p>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/RSVP")
    @RenderSection("scripts", required: false)
</body>
</html>
