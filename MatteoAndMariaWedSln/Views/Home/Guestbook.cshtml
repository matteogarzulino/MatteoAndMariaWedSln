@model IEnumerable<MatteoAndMariaWedWebApp.Models.GuestbookViewModel>
@*@{
        ViewBag.Title = "Il Guestbook";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@
<div class="container-fluid">
    <div class="row sectionContent">
        <h2>Guestbook</h2>
        <h3>Il ricordo del nostro giorno più bello è anche grazie a voi, che c'eravate e ci sarete...</h3>
        <div class="col-md-10">
            <table class="table guestTable" id="idGuestbookTable">

                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@Html.DisplayFor(modelItem => item.Guestname)</strong>
                                <br />
                                <p>
                                    @Html.DisplayFor(modelItem => item.InsertDate)
                                </p>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GuestbookContent)
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
        <div class=" col-md-2"></div>
    </div>
    <div class="row">
        <div class="col-md-8">
        </div>
        <div class="col-md-2">
            <h3>
                <a href="@Url.Action("New", "Guestbook")" class="btn btn-success">
                    Lasciaci il tuo ricordo!
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
            </h3>
        </div>
    </div>
</div>
